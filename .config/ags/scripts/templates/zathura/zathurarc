# window frame configurations
set window-height 3000
set window-width 1000
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 10
set window-title-page true
set guioptions vc

# set scrolling options
set scroll-step 40

# font size
set font "Fira Code 15"

# clipboard configurations
set selection-clipboard clipboard

# mappings

map j feedkeys "<C-Down>"
map k feedkeys "<C-Up>"

# unmap f
# map f toggle_fullscreen
# map [fullscreen] f toggle_fullscreen

# ----- colour config ----- 
set notification-error-bg "#$background #"
set notification-error-fg "#$secondaryContainer #"
set notification-warning-bg "#$background #"
set notification-warning-fg "#$secondaryContainer #"
set notification-bg "#$background #"
set notification-fg "#$secondaryContainer #"
set completion-group-bg "#$background #"
set completion-group-fg "#$secondary #"
set completion-bg "#$primaryContainer #"
set completion-fg "#$onBackground #"
set completion-highlight-bg "#$secondary #"
set completion-highlight-fg "#$background #"
set inputbar-bg "#$primaryContainer #"
set inputbar-fg "#$onBackground #"
set statusbar-bg "#$background #"
set statusbar-fg "#$onBackground #"
set highlight-color "#$secondary #"
set highlight-active-color "#$onSurface #"
set default-bg "#$background #"
set default-fg "#$onBackground #"
set recolor-lightcolor "#$primaryContainer #"
set recolor-darkcolor "#$onBackground #"
set index-bg "#$primaryContainer #"
set index-fg "#$onBackground #"
set index-active-bg "#$secondary #"
set index-active-fg "#$background #"
set recolor true
set recolor-keephue true
# set recolor-reverse-video true
