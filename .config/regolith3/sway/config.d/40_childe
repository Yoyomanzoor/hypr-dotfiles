## Navigate // Next Free Workspace // <><Ctrl> n ##
set_from_resource $wm.binding.next_free wm.binding.next_free Ctrl+n
bindsym $mod+$wm.binding.next_free exec --no-startup-id childe

## Modify // Move Window to Next Free Workspace // <><Alt> n ##
set_from_resource $wm.binding.move_next_free wm.binding.move_next_free n
bindsym $mod+$alt+$wm.binding.move_next_free exec --no-startup-id childe --move-window

## Modify // Carry Window to Next Free Workspace // <><Alt><Shift> n ##
set_from_resource $wm.binding.take_next_free wm.binding.take_next_free Shift+n
bindsym $mod+$alt+$wm.binding.take_next_free exec --no-startup-id childe --move-window --follow

## Modify // Carry Window to Next Workspace // <><Alt><Shift> h l ##
bindsym $mod+$alt+Shift+h move container to workspace prev; workspace prev
bindsym $mod+$alt+Shift+l move container to workspace next; workspace next
